<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.register.RegisterActivity">

    <TextView
        android:id="@+id/tv_register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="스토리 스토퍼"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_register_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="로그인하여 책에 대해 모든 것을 알아보세요."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_register_title"
        app:layout_constraintStart_toStartOf="@+id/tv_register_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_register_title" />

    <TextView
        android:id="@+id/tv_register_sub_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="많은 사람들이 책을 고르기에 도움이 될 것입니다."
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_register_sub_title"
        app:layout_constraintStart_toStartOf="@+id/tv_register_sub_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_register_sub_title" />

    <Button
        android:id="@+id/btn_"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Google로 계속하기"
        app:layout_constraintEnd_toEndOf="@+id/tv_register_sub_explain"
        app:layout_constraintStart_toStartOf="@+id/tv_register_sub_explain"
        app:layout_constraintTop_toBottomOf="@+id/tv_register_sub_explain" />

</androidx.constraintlayout.widget.ConstraintLayout>